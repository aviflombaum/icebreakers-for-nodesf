<!DOCTYPE html>
<html>
  <% include ../layout/header.ejs %>
  <body>
    <div class="container">
      <% include ../layout/navigation.ejs %>

      <main role="main">
        <div class="jumbotron">
          <h1 class="display-3">Break the Ice!</h1>
          <p class="lead">Get to know your teammates, friends, study buddies, or anyone else with some fun web-based, video or text, icebreakers!</p>
          <!-- <p><a class="btn btn-lg btn-success" href="#" role="button">Sign up today</a></p> -->
        </div>

        <div class="row marketing">
          <div class="col-lg-12">
            <% questions.forEach(function(question){ %>
              <h4><%= question.content %></h4>
              <p><a class="btn btn-primary" href="/icebreakers/new?questionID=<%= question.id %>" role="button">Make an Icebreaker</a></p>
              <!-- <p>Donec id elit non mi porta gravida at eget metus. Maecenas faucibus mollis interdum. </p> -->
            <% }) %>
          </div>
        </div>
      </main>

      <% include ../layout/footer.ejs %>
    </div> <!-- /container -->
  </body>
</html>