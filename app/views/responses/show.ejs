<!DOCTYPE html>
<html>
  <% include ../layout/header.ejs %>
  <body>
    <div class="container">
      <% include ../layout/navigation.ejs %>

      <main role="main">
        <div class="row marketing">
          <div class="col-lg-12">
            <div class="card">
              <h4 class="card-header"><%= question.content %></h4>
              <div class="card-body">
                
                <% iceBreakerResponses.forEach(function(iceBreakerResponse) { %>
                <div class="card" style="margin-bottom: 20px">
                  <h4 class="card-header"><%= iceBreakerResponse.email %></h4>
                  <div class="card-body">
                    <p class="card-text"><%= iceBreakerResponse.responseText %></p>
                  </div>
                </div>
                <% }) %>
              </div>
            </div>
          </div>
        </div>
      </main>

      <% include ../layout/footer.ejs %>
    </div> <!-- /container -->
  </body>
</html>
